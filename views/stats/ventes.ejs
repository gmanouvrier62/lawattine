                 	return "<font title='" + row[12] + " %'>" + row[4] + "</font>";  //tva                  
                    
                },
                "targets": 4
            },
            {
                "render": function ( data, type, row ) {
                    
                    return "<font title='" + row[11] + " %'>" + row[5] + "</font>";                    
                },
                "targets": 5
